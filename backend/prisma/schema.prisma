generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  PENDING
  ACCEPTED
  RESOLVED
  REJECTED
}

model Ticket {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  contactInfo String
  timestamps  DateTime @default(now())
  status      Status   @default(PENDING)
}